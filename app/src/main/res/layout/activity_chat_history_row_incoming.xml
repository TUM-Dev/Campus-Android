<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/padding_chat_big"
    android:paddingStart="@dimen/padding_chat_small">

    <LinearLayout
        android:id="@+id/chatMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_incoming"
        android:orientation="vertical"
        android:padding="@dimen/material_small_padding"
        tools:backgroundTint="@color/tum_50"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/userTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/tum_blue"
            android:textSize="12sp"
            tools:text="User" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            tools:text="Message" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="Time" />

    </LinearLayout>

</FrameLayout>
