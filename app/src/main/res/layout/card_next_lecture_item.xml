<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="@dimen/card_view_elevation"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/material_corner_radius">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/material_default_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:typeface="sans"
                tools:text="Card title"/>

            <TextView
                android:id="@+id/card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_small_padding"
                tools:text="Card time"/>

            <TextView
                android:id="@+id/card_location_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/material_small_padding"
                android:drawableStart="@drawable/ic_location"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#00a7de"
                tools:text="Card location action"/>

            <TextView
                android:id="@+id/card_event_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/material_small_padding"
                android:drawableStart="@drawable/ic_event"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#00a7de"
                tools:text="Card event action"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/material_small_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/lecture_1"
                    android:layout_width="@dimen/next_lecture_select_width"
                    android:layout_height="@dimen/next_lecture_select_width"
                    android:layout_margin="1dp"
                    android:background="@drawable/next_lecture_select"
                    android:text="1"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:id="@+id/lecture_2"
                    android:layout_width="@dimen/next_lecture_select_width"
                    android:layout_height="@dimen/next_lecture_select_width"
                    android:layout_margin="1dp"
                    android:background="@drawable/next_lecture_select"
                    android:text="2"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/lecture_3"
                    android:layout_width="@dimen/next_lecture_select_width"
                    android:layout_height="@dimen/next_lecture_select_width"
                    android:layout_margin="1dp"
                    android:background="@drawable/next_lecture_select"
                    android:text="3"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:id="@+id/lecture_4"
                    android:layout_width="@dimen/next_lecture_select_width"
                    android:layout_height="@dimen/next_lecture_select_width"
                    android:layout_margin="1dp"
                    android:background="@drawable/next_lecture_select"
                    android:text="4"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>