<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/layout_progress"
        android:visibility="gone" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/layout_error"
        android:visibility="gone" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/layout_failed_token"
        android:visibility="gone" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/layout_no_token"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default" >

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:contentDescription="@string/tum_logo"
                android:paddingBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvDetails1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light_blue"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDetails2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/semilarge_text_size" />

            <TextView
                android:id="@+id/tvDetails3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/semilarge_text_size" />

            <TextView
                android:id="@+id/tvDetails4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="none"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/semilarge_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>