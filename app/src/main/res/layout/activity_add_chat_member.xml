<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="de.tum.in.tumcampusapp.component.ui.chat.AddChatMemberActivity">

    <include layout="@layout/toolbar" />

    <!-- TextInputLayout shows the hint above the EditText after you start typing -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <AutoCompleteTextView
            android:id="@+id/chat_user_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_search_hint"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete"
            android:lines="1"
            android:textColor="@color/text_dark_primary"
            android:textColorHint="@color/text_dark_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_default"
        android:text="@string/or" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_chat_via_qr_code" />

    <ImageView
        android:id="@+id/join_chat_qr_code"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:scaleType="fitCenter" />

</LinearLayout>