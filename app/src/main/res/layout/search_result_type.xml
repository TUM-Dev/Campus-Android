<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typeCtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/search_result_type_background"
    android:gravity="center"
    android:layout_marginLeft="@dimen/material_small_padding"
    android:paddingHorizontal="@dimen/material_default_padding"
    android:paddingVertical="@dimen/material_small_padding">

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        tools:text="Title" />

</FrameLayout>