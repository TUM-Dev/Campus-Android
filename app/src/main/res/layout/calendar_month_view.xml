<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.applandeo.materialcalendarview.CalendarView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerColor="@color/tum_blue"
        app:pagesColor="@color/default_window_background"
        app:todayLabelColor="@color/tum_blue"
        app:daysLabelsColor="@color/text_primary"
        app:abbreviationsBarColor="@color/secondary_window_background"
        app:abbreviationsLabelsColor="@color/text_primary" />

</FrameLayout>