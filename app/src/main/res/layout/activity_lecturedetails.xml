<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- The toolbar aka SupportActionBar -->
    <include layout="@layout/toolbar" android:id="@+id/toolbar_lecture_details"/>

    <include
        layout="@layout/layout_all_errors"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/material_default_padding">

            <TextView
                android:id="@+id/lectureNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="Name" />

            <TextView
                android:id="@+id/tvLDetailsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lec_details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/semesterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/swsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/dateHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lecture_begin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/contributorsHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lec_contributors"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/professorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/orgTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/contentHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lec_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/contentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/methodHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lec_method"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/methodTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/targetsHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/lec_target"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/targetsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

            <TextView
                android:id="@+id/examinationAidsHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_default_padding"
                android:autoLink="none"
                android:fontFamily="sans-serif-medium"
                android:scrollHorizontally="false"
                android:text="@string/examination_aids"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/examinationAidsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:scrollHorizontally="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:text="Lorem ipsum" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_divider" />

    <FrameLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/material_default_padding"
        android:paddingTop="@dimen/material_small_padding"
        android:paddingEnd="@dimen/material_default_padding"
        android:paddingBottom="@dimen/material_small_padding">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/appointmentsButton"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:enabled="false"
            android:text="@string/lectures_appointments"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/material_corner_radius" />

    </FrameLayout>

</LinearLayout>